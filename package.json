{
  "name": "kourikoulom",
  "description": "My resume.",
  "version": "2016.10.08",
  "private": true,
  "homepage": "http://pierre-antoine.delnatte.be",
  "author": {
    "name": "leny",
    "email": "info@flatland.be"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/leny/kourikoulom.git"
  },
  "scripts": {
    "html": "npx pug src/pug/index.pug -o .",
    "css:stylus": "npx stylus -u ./node_modules/kouto-swiss < src/stylus/styles.styl > assets/styles.css",
    "css:csso": "npx csso assets/styles.css -o assets/styles.min.css",
    "css:clean": "npx del-cli assets/styles.css",
    "css": "npm run css:stylus && npm run css:csso && npm run css:clean",
    "build": "npm run html && npm run css"
  },
  "devDependencies": {
    "csso-cli": "^2.0.2",
    "del-cli": "^1.1.0",
    "kouto-swiss": "^0.14.0",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5"
  }
}
